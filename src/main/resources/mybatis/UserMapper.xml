<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sywl.dao.UserMapper" >
  <resultMap id="UserResultMap" type="com.sywl.domain.UserDomain" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="role" property="role" jdbcType="VARCHAR" />
    <result column="sex" property="sex" jdbcType="TINYINT" />
    <result column="birthday" property="birthday" jdbcType="TIMESTAMP" />
    <result column="real_name" property="realName" jdbcType="VARCHAR" />
    <result column="mobile" property="mobile" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="account_balance" property="accountBalance" jdbcType="DOUBLE" />
  </resultMap>
  <resultMap id="ReturnMap" type="java.util.HashMap" >
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="role" property="role" jdbcType="VARCHAR" />
    <result column="sex" property="sex" jdbcType="TINYINT" />
    <result column="birthday" property="birthday" jdbcType="TIMESTAMP" />
    <result column="real_name" property="realName" jdbcType="VARCHAR" />
    <result column="mobile" property="mobile" jdbcType="VARCHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="account_balance" property="accountBalance" jdbcType="DOUBLE" />
  </resultMap>
  <select id="queryUserByName" resultMap="UserResultMap" parameterType="java.lang.String" >
    select
    *
    from user
    where user_name = #{userName}
  </select>
  <insert id="insert" parameterType="com.sywl.domain.UserDomain" useGeneratedKeys="true"
		keyProperty="id">
    insert into user (id, user_name, password, role, real_name,sex, birthday, mobile, email)
    values (#{id,jdbcType=VARCHAR}, #{userName,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, #{role,jdbcType=VARCHAR},
      #{realName,jdbcType=VARCHAR}, #{sex,jdbcType=TINYINT}, #{birthday,jdbcType=TIMESTAMP}, #{mobile,jdbcType=VARCHAR},
      #{email,jdbcType=VARCHAR})
  </insert>
  
  <select id="queryMapByUserName" resultMap="ReturnMap" parameterType="java.lang.String" >
    select
    id,user_name,password,role,sex,birthday,real_name,mobile,email,account_balance
    from user
    where user_name = #{userName}
  </select>

